                                                 Width="25"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                            <Rectangle VerticalAlignment="Stretch" Fill="Black" Width="1" Margin="0,0,10,0"/>
                            <ComboBox VerticalAlignment="Center" 
                                  Width="110"
                                  ItemsSource="{Binding filter}"
