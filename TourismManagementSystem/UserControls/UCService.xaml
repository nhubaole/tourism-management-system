                            x:Name="btnDV"
                            Foreground="{StaticResource Primary}"
                            Content="Dịch vụ" 
                            Width="70"
                            Margin="20, 0, 0, 0"
                            HorizontalAlignment="Left"
                                />
                    <ListBoxItem
                            x:Name="btnDD"
                            Content="Địa điểm" 
                            Width="75"
                            Margin="5, 0, 0, 0"
                            HorizontalAlignment="Left"/>
                </ListBox>
                <Button
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="30"
                        Height="30"
                        Padding="0, -3, 0, 0"
                        HorizontalAlignment="Right"
                        Margin="0 ,-3 , 15, 0"
                        Background="{StaticResource Primary}"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        ToolTip="MaterialDesignRaisedButton with Round Corners"
                        Command="{Binding ToAddServiceCommand}"
                        CommandParameter="{Binding ElementName=ucService}">
                    <TextBlock
                            Text="+" 
                            FontSize="20"/>
                </Button>

            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions >
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1.2*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <TextBlock
                        Width="100"
                        Text="*Nhấn Enter để bắt đầu tìm kiếm"
                        FontSize="10"
                        Foreground="IndianRed"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Center"
                        TextWrapping="Wrap"
                        Margin="-100,0, 0, 0" 
                        >
                                 
                    </TextBlock>
                    <TextBox
                        x:Name="tbfilter1"
                        Width="150"
                        Height="25"
                        materialDesign:HintAssist.Hint="Nhập thông tin"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="White"
                        VerticalAlignment="Bottom"
                        BorderBrush="{StaticResource Primary}"
                        IsEnabled="{Binding IsTbEnable}"
                        Text="{Binding SearchTerm, UpdateSourceTrigger=PropertyChanged}"
                        BorderThickness="1"  
                        FontSize="13"
                        Padding="0, 0, 0, 0"
                            >
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding FindServiceCommand}" CommandParameter="{Binding ElementName=tbfilter1}" />
                        </TextBox.InputBindings>
                    </TextBox>
                </Grid>
                <Grid Grid.Column="1">
                    <Label Content="Loại dịch vụ:"
                                   VerticalAlignment="Top"
                                   FontSize="10"
                                   Padding="-3" Margin="0,17,0,0"
                                   />
