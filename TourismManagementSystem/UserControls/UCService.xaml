                        </DataGrid.Columns>
                    </DataGrid>
                    <TextBlock 
                                VerticalAlignment="Top"
                                HorizontalAlignment="Left"
                                Text="Dịch vụ khác"
                                Foreground="{StaticResource Primary}"
                                FontWeight="Bold"
                                FontSize="18"
                                Margin="30, 10, 0, 10"
                             ></TextBlock>
                    <DataGrid 
                        Grid.Row="1"
                        x:Name="dtgridDVK"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Height="155"
                        Margin="30, 0, 30, 10"
                        ItemsSource="{Binding SearchResultDVK, UpdateSourceTrigger=PropertyChanged}"
                        SelectedItem="{Binding selectedItemDVK, Mode=OneWayToSource}"
                        AutoGenerateColumns="False"
                        BorderBrush="{StaticResource Primary2}"
                        BorderThickness="1.5" 
                        RowDetailsVisibilityMode="VisibleWhenSelected"
                        ScrollViewer.CanContentScroll="True"
                        ScrollViewer.PanningMode="Both"
                        HeadersVisibility="Column"
                        SelectionMode="Single"
                        SelectionUnit="FullRow"
                        CanUserAddRows="False"
                        CanUserDeleteRows="False"
                        CanUserReorderColumns="False"
                        CanUserResizeRows="False"
                        ColumnWidth="*"
                        IsReadOnly="False"
                        GridLinesVisibility="None" 
               >
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource Primary}"/>
                                <Setter Property="Margin" Value="0, 10, 0, 10"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="DataGridCellFocusBorderBrush" Color="Transparent" />
                            <Style TargetType="DataGridCell">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="BorderBrush" Value="{StaticResource DataGridCellFocusBorderBrush}" />
                                        <Setter Property="Background" Value="Transparent"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                            <Style TargetType="DataGridRow">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="BorderThickness" Value="0" />
                                        <Setter Property="BorderBrush" Value="{StaticResource DataGridCellFocusBorderBrush}" />
                                        <Setter Property="Background" Value="{StaticResource Primary2}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns >
                            <DataGridTextColumn Header="Mã dịch vụ" Binding="{Binding MADV}" Width="*"  IsReadOnly="True" CanUserSort="True">

                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Tên dịch vụ" Binding="{Binding TENDV}"  Width="*" IsReadOnly="True" CanUserSort="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="10"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Mô tả" Binding="{Binding MOTA}"  Width="*" IsReadOnly="True" CanUserSort="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap" />
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="TextAlignment" Value="Center" />
                                        <Setter Property="Padding" Value="10"/>

                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTemplateColumn Header="" 
                                        Width="auto"
                                        >
                                <DataGridTemplateColumn.CellTemplate >
                                    <DataTemplate >
                                        <Button
                                            x:Name="btnEdit"
                                            Height="auto"
                                            Width="auto"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Command="{Binding DataContext.ToEditOtherServiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"
                                    >
                                            <materialDesign:PackIcon 
                                                Kind="Pencil"
                                                Foreground ="{StaticResource Primary}"
                                         />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn >
                            <DataGridTemplateColumn Header="" 
                                                    Width="auto"
                                        >
                                <DataGridTemplateColumn.CellTemplate >
                                    <DataTemplate >
                                        <Button
                                            Height="auto"
                                            Width="auto"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            Command="{Binding DataContext.DeleteOtherServiceCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Delete"
                                                             Foreground ="{StaticResource Primary}"/>
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn >
                        </DataGrid.Columns>
                    </DataGrid>

                </StackPanel>

            </ScrollViewer>

        </Grid>

    </Grid>
</UserControl>
