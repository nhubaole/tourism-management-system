                        MinWidth="72"
                        Background="White"
                        ItemsSource="{Binding FilterItems1}"
                        SelectedItem="{Binding Filter1, UpdateSourceTrigger=PropertyChanged}"
                        VerticalAlignment="Bottom"
                        BorderBrush="{StaticResource Primary}"
                        BorderThickness="1"
                        HorizontalContentAlignment="Center"
                        Padding="10,2, 0, 0"
                        FontSize="13"
                        materialDesign:TextFieldAssist.HasClearButton="True"
                        >
                    </ComboBox>

                </Grid>
                <Grid Grid.Column="2"
                              >
