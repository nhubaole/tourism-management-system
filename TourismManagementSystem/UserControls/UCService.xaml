                        HorizontalAlignment="Left"
                        BorderBrush="{StaticResource Primary}"
                        BorderThickness="1"
                        HorizontalContentAlignment="Center"
                        Padding="10,2, 0, 0"
                        FontSize="13"
                        IsEnabled="{Binding IsFilter2Enable}"
                        materialDesign:TextFieldAssist.HasClearButton="True">
