<Window x:Class="TourismManagementSystem.View.AddTripWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TourismManagementSystem.View"
        mc:Ignorable="d"
        Title="AddTripWindow" Height="550" Width="900"
        ResizeMode="NoResize"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        xmlns:uc="clr-namespace:TourismManagementSystem.UserControls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Secondary}">
    <Grid Margin="50,20,50,20">
        <Border Background="White"
                CornerRadius="20,20,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        VerticalAlignment="Top"
                        Height="50"
                        CornerRadius="20,20,0,0"
                        Background="{StaticResource Primary}">
                    <TextBlock Text="Thêm/cập nhật chuyến du lịch"
                               VerticalAlignment="Center"
                               Margin="50,0,0,0"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Medium"/>
                </Border>
                <Grid Grid.Row="1" 
                      Margin="80,5,80,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="70*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="30*"/>
                        <RowDefinition Height="40*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="Mã chuyến"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Text="21521234"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium"/>
                    </Grid>
                    <Grid Margin="0,58,0,0" Grid.RowSpan="2">
                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Text="Mã tuyến"
                                   FontSize="20"
                                   FontWeight="Medium" Margin="0,-12,0,0"/>
                        <ComboBox VerticalAlignment="Top"
                                 HorizontalAlignment="Left"
                                 FontSize="20"
                                 Text="21521335"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium" Margin="240,-15,0,0"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="0,50,0,0" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Text="Loại chuyến"
                                   FontSize="20"
                                   FontWeight="Medium" Margin="0,-5,0,0" Grid.ColumnSpan="2"/>
                        <ComboBox VerticalAlignment="Center"
                                 HorizontalAlignment="Left"
                                 FontSize="20"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium" Grid.Column="1" Margin="160,0,0,0">
                            <ComboBoxItem Content="Trong nước"></ComboBoxItem>
                            <ComboBoxItem Content="Quốc tế"></ComboBoxItem>
                        </ComboBox>
                    </Grid>
                    <Grid Grid.Row="2" Margin="0,58,0,6" Grid.RowSpan="2">
                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Text="Mã HDV"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <Button Content="+" Margin="105,-3,490,38" Background="{DynamicResource Primary}" BorderBrush="{DynamicResource White}" FontSize="20" RenderTransformOrigin="0.556,0.511"></Button>
                        <ComboBox VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium" Height="27" Margin="0,-4,0,0"/>
                        <ComboBox VerticalAlignment="Top"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium" Height="27" Margin="0,34,0,0"/>

                    </Grid>
                    <Grid Grid.Row="4" Margin="0,0,0,58" Grid.RowSpan="2">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="Thời gian bắt đầu"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <DatePicker Margin="240,0,0,0"></DatePicker>
                    </Grid>
                    <Grid Grid.Row="5" Margin="0,0,0,58" Grid.RowSpan="2">
                        <TextBlock VerticalAlignment="Top"
                                   HorizontalAlignment="Left"
                                   Text="Thời gian kết thúc"
                                   FontSize="20"
                                   FontWeight="Medium" Margin="0,-2,0,0"/>
                        <DatePicker Margin="240,0,0,0"></DatePicker>
                    </Grid>
                    <Grid Grid.Row="6">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="Giá vé"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Right">
                            <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Text="5 600 000"
                                 Width="360"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium"/>
                            <TextBlock Text="vnđ"
                                       VerticalAlignment="Bottom"
                                       FontSize="18"
                                       Margin="10,0,0,0"/>
                        </StackPanel>

                    </Grid>
                    <Grid Grid.Row="7">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="Số lượng khách dự kiến"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Text="34"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium"/>
                    </Grid>
                    <Grid Grid.Row="8">
                        <TextBlock VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   Text="Số lượng khách thực tế"
                                   FontSize="20"
                                   FontWeight="Medium"/>
                        <TextBox VerticalAlignment="Center"
                                 HorizontalAlignment="Right"
                                 FontSize="20"
                                 Text="29"
                                 Width="400"
                                 Foreground="{StaticResource Primary}"
                                 FontWeight="Medium"/>

                    </Grid>
                    <Grid Grid.Row="9">
                        <Button x:Name="AddButton" 
                            Content="Thêm/Cập nhật thông tin"
                            
                            Style="{DynamicResource PrimaryButton}" Foreground="{DynamicResource White}" FontSize="20" Margin="0,5,0,5">

                        </Button>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
