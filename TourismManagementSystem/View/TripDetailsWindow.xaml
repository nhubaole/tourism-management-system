                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
        <Grid Margin="0,30,30,30" Grid.Column="1"
              Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"
              Width="300">
            <Border Background="White"
                CornerRadius="20,20,20,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0"
                        VerticalAlignment="Top"
                        Height="50"
                        CornerRadius="20,20,0,0"
                        Background="{StaticResource Primary}">
                        <TextBlock Text="Danh sách hành khách"
                               VerticalAlignment="Center"
                               Margin="30,0,0,0"
                               Foreground="White"
                               FontSize="22"
                               FontWeight="Medium"/>
                    </Border>
                    <Border Grid.Row="1"
                        CornerRadius="20" 
                    BorderThickness="1" 
                    BorderBrush="Black" 
                    Height="40"
                    Width="280"
                        Background="White">
                        <StackPanel  Orientation="Horizontal">
                            <TextBox Width="120"
                             HorizontalAlignment="Left"
                             Margin="10,5,0,5"
                             materialDesign:HintAssist.Hint="Nhập thông tin"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                            <materialDesign:PackIcon Kind="Magnify" 
                                                 Height="25"
                                                 Width="25"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                            <Rectangle VerticalAlignment="Stretch" Fill="Black" Width="1" Margin="0,0,10,0"/>
                            <ComboBox VerticalAlignment="Center" 
                                  Width="80"
                                  ItemsSource="{Binding FilterCbItems}"
                                  SelectedItem="{Binding SelectedFilter, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"/>
                        </StackPanel>
                    </Border>
                    <ScrollViewer Grid.Row="2">
                        <StackPanel 
                      Margin="20,20,10,20">
                            <ItemsControl ItemsSource="{Binding ListKhach}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource Secondary}"
                                    CornerRadius="20"
                                    Height="140"
                                        Margin="0,0,0,10">
                                            <StackPanel Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="CCCD:"
                               VerticalAlignment="Center"
                               Margin="20,10,0,0"
                               Foreground="Black"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding CCCD, StringFormat='dd/MM/yyyy'}"
                               VerticalAlignment="Center"
                               Margin="10,10,0,0"
                               Foreground="{StaticResource Primary}"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Họ tên:"
                               VerticalAlignment="Center"
                               Margin="20,10,0,0"
                               Foreground="Black"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding HOTEN}"
                               VerticalAlignment="Center"
                               Margin="10,10,0,0"
                               Foreground="{StaticResource Primary}"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                </StackPanel>
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Giới tính:"
                               VerticalAlignment="Center"
                               Margin="20,10,0,0"
                               Foreground="Black"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding GIOITINH}"
                               VerticalAlignment="Center"
                               Margin="10,10,0,0"
                               Foreground="{StaticResource Primary}"
                               FontSize="14"
                                                   FontWeight="Medium"/>


                                                </StackPanel>

                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="Ngày sinh:"
                               VerticalAlignment="Center"
                               Margin="20,10,0,0"
                               Foreground="Black"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                    <TextBlock Text="{Binding NGSINH, StringFormat='dd/MM/yyyy'}"
                               VerticalAlignment="Center"
                               Margin="10,10,0,0"
                               Foreground="{StaticResource Primary}"
                               FontSize="14"
                                                   FontWeight="Medium"/>
                                                </StackPanel>
                                            </StackPanel>
                                            
                                        </Border>
                                    </DataTemplate>
